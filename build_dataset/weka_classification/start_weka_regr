#!/bin/bash

# INPUT_FILE = first argoment to pass, csv file with separator ','
INPUT_FILE=${1}
TO_WEKA_FORMAT_FILE=input_towekaformat_final.arff #The same name used in log_regr and SVM scripts
STARTTIME=$(date +%s)

echo "Preprocessing ${INPUT_FILE}"
./preproc ${INPUT_FILE}
echo "Output -> ${TO_WEKA_FORMAT_FILE} -> Created"
echo "Logistic regression started"
./log_regr ${TO_WEKA_FORMAT_FILE}
echo "Logistic regression finished"
echo "SVM started"
./SVM ${TO_WEKA_FORMAT_FILE}
echo "SVM finished"

ENDTIME=$(date +%s)

echo "It takes $(($ENDTIME - $STARTTIME)) seconds to complete this task..."
